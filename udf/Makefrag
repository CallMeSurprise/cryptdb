OBJDIRS	+= udf

all:    $(OBJDIR)/udf/edb.so

$(OBJDIR)/udf/edb.so: $(OBJDIR)/udf/edb.o \
		      $(OBJDIR)/libedbcrypto.so
	$(CXX) -shared -o $@ $< $(LDFLAGS) -ledbcrypto

install: install_udf

.PHONY: install_udf
install_udf: $(OBJDIR)/udf/edb.so
	install -m 644 $(OBJDIR)/udf/edb.so $(MYSQL_PLUGIN_DIR)

